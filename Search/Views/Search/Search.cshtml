@model IEnumerable<Search.Models.SearchResult>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ Html.RenderPartial("_SearchForm"); }

<div class="container" style="padding-top: 2em;">
    <div class="row">
        <div class="col-xs-12 col-md-8">
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title">Search Result</h3>
                        </div>
                        <div class="panel-body">

                            @foreach (var item in Model)
                            {
                                string pic = item.Title.Trim().ToLower() + ".jpg";
                                <div class="well">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-4 center-block">
                                            <img src="~/Images/Flowers/@pic" alt="@item.Title" 
                                                 class="img-responsive img-thumbnail flowers-pic"
                                                 style="cursor: pointer;">
                                            @*<img src="~/Images/Flowers/@pic" alt="@item.Title" class="img-responsive img-thumbnail flowers-pic" 
                                                 style="cursor: pointer;" data-toggle="modal" data-target="#flower">*@
                                        </div>
                                        <div class="col-xs-12 col-md-8">
                                            <a href="@item.ExternalUrl" targe="_blank">@item.Title</a>
                                            <p>@item.Description</p>
                                        </div>
                                    </div>

                                </div>


                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-4">

            <div class="row">
                <div class="col-xs-12">
                    <div class="panel panel-success">
                        <div class="panel-heading">
                            <h3 class="panel-title">Related Articles</h3>
                        </div>
                        <div class="panel-body">
                            @foreach (var item in Model)
                            {
                                foreach (var relArt in item.RelatedArticles)
                                {
                                    <div class="col-xs-12">

                                        <div class="list-group">
                                            <a href="@relArt.Url" targe="_blank" class="list-group-item">
                                                <h4 class="list-group-item-heading">@relArt.Title</h4>
                                            </a>
                                        </div>
                                    </div>
                                }





                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@{ Html.RenderPartial("_FlowerModal2"); }
