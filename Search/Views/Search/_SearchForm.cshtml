@model IEnumerable<Search.Models.SearchResult>
<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center">
            <h1>Search by M</h1>
        </div>
    </div>
</div>
@using (Html.BeginForm("Search", "Search", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="container">
        <div class="row">
            <div class="form-group">
                <label for="searchString" class="col-xs-12 col-xs-offset-0 col-md-3 col-md-offset-3 control-label ">What do you want to search?</label>
                <div class="col-xs-12 col-md-6">
                    <input class="form-control" type="text" name="searchString" id="searchString" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 text-center">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>

        </div>
    </div>}
 
